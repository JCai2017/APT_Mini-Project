<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ee382apt.connex.ViewAllStreamsActivity">

    <GridView
        android:id="@+id/AllStreams"
        android:layout_width="302dp"
        android:layout_height="254dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:columnWidth="100dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165" />

    <Button
        android:id="@+id/SearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_marginLeft="37dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/NearByButton"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.309"
        app:layout_constraintTop_toTopOf="@+id/NearByButton"
        android:layout_marginTop="-9dp" />

    <Button
        android:id="@+id/MySubscribedStreamButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="86dp"
        android:text="My Subscribed Stream"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="37dp" />

    <Button
        android:id="@+id/NearByButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NearBy"
        tools:layout_editor_absoluteY="339dp"
        android:layout_marginRight="55dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
